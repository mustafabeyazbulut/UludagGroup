    <div class="container">
        <div class="row">
            <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                &copy;
                @if (Model.FaviconModel != null && !string.IsNullOrEmpty(Model.FaviconModel.Title))
                {
                    <a class="fw-medium" href="@Url.Action("Index", "Home")">@Model.FaviconModel.Title</a>
                }
                , All Right Reserved.
            </div>
            <div class="col-md-6 text-center text-md-end">
                Designed By <a class="fw-medium" href="https://www.linkedin.com/in/mustafabeyazbulut">Mustafa Beyazbulut</a>
            </div>
        </div>
    </div>
</div>
<!-- Copyright End -->