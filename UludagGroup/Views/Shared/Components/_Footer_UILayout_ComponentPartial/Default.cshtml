@model FooterViewModel
<!-- Footer Start -->
<div class="container-fluid bg-dark footer mt-5 py-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-4 col-md-6">
                <h4 class="text-primary mb-4">Ofisimiz</h4>
                @if (Model.ContactModel != null && !string.IsNullOrEmpty(Model.ContactModel.PrimaryAddress))
                {
                    <p class="mb-2"><i class="fa fa-map-marker-alt text-primary me-3"></i>@Model.ContactModel.PrimaryAddress </p>
                    @if (!string.IsNullOrEmpty(Model.ContactModel.SecondaryAddress))
                    {
                        <p class="mb-2"><i class="fa fa-map-marker-alt text-primary me-3"></i>@Model.ContactModel.SecondaryAddress</p>
                    }
                }
                @if (Model.ContactModel != null && !string.IsNullOrEmpty(Model.ContactModel.PrimaryPhone))
                {
                    <p class="mb-2"><i class="fa fa-phone-alt text-primary me-3"></i>@Model.ContactModel.PrimaryPhone</p>
                }
                @if (Model.ContactModel != null && !string.IsNullOrEmpty(Model.ContactModel.PrimaryEmail))
                {
                    <p class="mb-2"><i class="fa fa-envelope text-primary me-3"></i>@Model.ContactModel.PrimaryEmail</p>
                }
                <div class="d-flex pt-3">
                    @if (Model.SocialMediaModel != null && !string.IsNullOrEmpty(Model.SocialMediaModel.Twitter))
                    {
                        <a class="btn btn-square btn-primary rounded-circle me-2" href="@Model.SocialMediaModel.Twitter"><i class="fab fa-twitter"></i></a>
                    }
                    @if (Model.SocialMediaModel != null && !string.IsNullOrEmpty(Model.SocialMediaModel.Facebook))
                    {
                        <a class="btn btn-square btn-primary rounded-circle me-2" href="@Model.SocialMediaModel.Facebook"><i class="fab fa-facebook-f"></i></a>
                    }
                    @if (Model.SocialMediaModel != null && !string.IsNullOrEmpty(Model.SocialMediaModel.Youtube))
                    {
                        <a class="btn btn-square btn-primary rounded-circle me-2" href="@Model.SocialMediaModel.Youtube"><i class="fab fa-youtube"></i></a>
                    }
                    @if (Model.SocialMediaModel != null && !string.IsNullOrEmpty(Model.SocialMediaModel.Linkedin))
                    {
                        <a class="btn btn-square btn-primary rounded-circle me-2" href="@Model.SocialMediaModel.Linkedin"><i class="fab fa-linkedin-in"></i></a>
                    }
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <h4 class="text-primary mb-4">Hızlı Bağlantılar</h4>
                <a class="btn btn-link" href="@Url.Action("Index", "About")">Hakkımızda</a>
                <a class="btn btn-link" href="@Url.Action("Index", "Product")">Ürünlerimiz</a>
                <a class="btn btn-link" href="@Url.Action("Index", "OurService")">Hizmetlerimiz</a>
                <a class="btn btn-link" href="@Url.Action("Index", "Reference")">Referanslar</a>
                <a class="btn btn-link" href="@Url.Action("Index", "Contact")">İletişim</a>
            </div>
            <div class="col-lg-4 col-md-6">
                <h4 class="text-primary mb-4">Çalışma Saatlerimiz</h4>
                @foreach (var item in Model.WorkingHourModel)
                {
                    <p class="mb-1">@item.DayOfWeek</p>
                    <h6 class="text-light">@item.TimeRange</h6>
                }
            </div>
        </div>
    </div>
</div>
<!-- Footer End -->