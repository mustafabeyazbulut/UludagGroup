@model PageHeaderViewModel

<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-2 text-dark mb-4 animated slideInDown">@Model.PageTitle</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Home")">Anasayfa</a>
                </li>

                @if (Model.Breadcrumb.Count >= 2)
                {
                    string controller = Model.Breadcrumb[0];
                    string action = Model.Breadcrumb[1];
                    string pageName = Model.Breadcrumb[2];

                    <li class="breadcrumb-item text-dark">
                        <a href="@Url.Action(action, controller)">
                            @pageName
                        </a>
                    </li>

                    <li class="breadcrumb-item text-dark" aria-current="page">
                        @action
                    </li>
                }
            </ol>
        </nav>
    </div>
</div>
